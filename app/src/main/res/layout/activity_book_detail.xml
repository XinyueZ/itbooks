<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/error_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.itbooks.app.BookDetailActivity">


    <include layout="@layout/inc_pull_to_load" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/content_srl"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/content_sv"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <com.itbooks.views.AdjustViewBoundsImageView
                    android:id="@+id/detail_thumb_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:id="@+id/download_top_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="download"
                    style="@style/BookDetailStyle.Download" />

                <Button
                    android:id="@+id/download_in_browser_top_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="downloadBrowser"
                    android:text="@string/lbl_download_in_browser"
                    style="@style/BookDetailStyle.Download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_title"
                    style="@style/BookDetailStyle.Property" />


                <TextView
                    android:id="@+id/detail_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_title"
                    style="@style/BookDetailStyle" />


                <TextView
                    style="@style/BookDetailStyle.Property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_subtitle" />

                <TextView
                    android:id="@+id/detail_subtitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_subtitle"
                    style="@style/BookDetailStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_description"
                    style="@style/BookDetailStyle.Property" />

                <TextView
                    android:id="@+id/detail_description_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_description"
                    style="@style/BookDetailStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_author"
                    style="@style/BookDetailStyle.Property" />

                <TextView
                    android:id="@+id/detail_author_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_author"
                    style="@style/BookDetailStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_isbn"
                    style="@style/BookDetailStyle.Property" />

                <TextView
                    android:id="@+id/detail_isbn_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_isbn"
                    style="@style/BookDetailStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_year"
                    style="@style/BookDetailStyle.Property" />

                <TextView
                    android:id="@+id/detail_year_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_year"
                    style="@style/BookDetailStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_publisher"
                    style="@style/BookDetailStyle.Property" />

                <TextView
                    android:id="@+id/detail_publisher_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_publisher"
                    style="@style/BookDetailStyle" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_page"
                    style="@style/BookDetailStyle.Property" />

                <TextView
                    android:id="@+id/detail_page_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_page"
                    style="@style/BookDetailStyle" />

                <Button
                    android:id="@+id/download_bottom_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="download"
                    style="@style/BookDetailStyle.Download" />
                <Button
                    android:id="@+id/download_in_browser_bottom_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="downloadBrowser"
                    style="@style/BookDetailStyle.Download" />
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>