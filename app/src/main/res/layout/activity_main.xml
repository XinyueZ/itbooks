<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/error_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.itbooks.app.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <fragment
            android:name="com.itbooks.app.fragments.AdFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_height="0dp">

                <requestFocus />
            </LinearLayout>

            <EditText
                android:id="@+id/search_keyword_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/c0"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:singleLine="true"
                android:imeOptions="actionGo"
                android:inputType="textNoSuggestions|textLongMessage"
                android:paddingLeft="5dp"
                android:textColor="@color/text_common_black"
                android:hint="@string/lbl_search" />

            <ImageButton
                android:id="@+id/search_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_loupe"
                android:background="@drawable/selector_bg2_btn"
                android:layout_gravity="center_vertical|right"
                android:onClick="search" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/content_srl"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ListView
                    android:id="@+id/books_lv"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:cacheColorHint="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </android.support.v4.widget.SwipeRefreshLayout>

            <include layout="@layout/inc_pull_to_load" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>

